<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/switch_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:orientation="horizontal"
        android:padding="10dp">

        <RadioButton
            android:id="@+id/radio_day"
            style="@style/rb_theme"
            android:layout_marginRight="8dp"
            android:background="@drawable/date_selector"
            android:text="日" />

        <RadioButton
            android:id="@+id/radio_month"
            style="@style/rb_theme"
            android:layout_marginRight="8dp"
            android:background="@drawable/date_selector"
            android:text="月" />

        <RadioButton
            android:id="@+id/radio_year"
            style="@style/rb_theme"
            android:layout_marginRight="8dp"
            android:background="@drawable/date_selector"
            android:text="年" />

        <RadioButton
            android:id="@+id/radio_total"
            style="@style/rb_theme"
            android:background="@drawable/date_selector"
            android:text="寿命期" />
    </RadioGroup>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rl"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/rl_home_time_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_time_show_home4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="17dp" />

    </RelativeLayout>

</LinearLayout>
